@model Users.Entity.Advice
<div class="modal fade " id="addAdviceModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="border-radius:30px;">
            <div class="container">
                <div class="row">

                    <div class="col-md-offset-3 col-md-12">
                        @using (Html.BeginForm("CreateAdvice", "Advice",  FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="Data" value="@DateTime.Now" />
                            <div>
                                <img src="~/Content/logo2.png" style="width:90px;height:90px;" />
                            </div>
                            <span class="heading" style="color: #1596bf;">
                                Дать совет
                            </span>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.Headline, null, new { @class = "form-control", id = "inputEmail", placeholder = "Название совета" })
                                <i class="fas fa-signature"></i>
                            </div>
                            <div class="form-group">
                                @Html.DropDownList("category", ViewBag.Categories as SelectList, new { @class = "form-control" })
                                <i class="fas fa-sort"></i>
                            </div>
                            <div class="form-group">
                                @Html.TextAreaFor(x => x.Text, new { @class = "form-control", style = "height:100px;", id = "inputEmail", placeholder = "Введите ваш совет...", rows = "20" })
                                <i class="fas fa-align-justify"></i>
                            </div>
                            <div class="form-group">
                                <input type="file" name="image" id="photo" class="hide" placeholder="Photo" />
                                <label for="photo" class="form-control pt-2 ml-0 pl-0">Выбрать фото</label>
                                <i class="fas fa-camera-retro"></i>
                            </div>
                           
                            <!--<div> Загрузить картинку <input type="file" name="Image" /></div>-->
                            <div class="form-group mb-2 d-flex justify-content-center">
                                <button type="submit" class="btn btn-default">ДОБАВИТЬ ЗАПИСЬ</button>
                            </div>
                        }
                    </div>

                </div><!-- /.row -->
            </div><!-- /.container -->
        </div>
    </div>
</div>
